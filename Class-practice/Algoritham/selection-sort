#include <iostream> 
#include <vector>

using namespace std;

void selectionSort(vector<int>& arr);

int main(){
    
    int size;
    
    cout << "Enter The size of arr : ";
    cin >> size;

    vector<int> arr(size, 0);

    for (int i = 0; i < size; i++)
    {
        cout << "Enter The Element : ";
        cin >> arr[i];
    }

    cout << "------------------  Before  ------------------" << endl;

    cout << endl;
    
    for (int i = 0; i < size; i++)
    {
        cout << arr[i] << " ";
    }
    
    cout << "\n----------------------------------------------" << endl;
    
    selectionSort(arr);
    
    cout << "------------------  after  ------------------" << endl;
    cout << endl;

    for (int i = 0; i < size; i++)
    {
        cout << arr[i] << " ";
    }

    cout << "\n----------------------------------------------" << endl;

    return 0;
}

void selectionSort(vector<int>& arr){
    for(int i = 0; i < arr.size() - 1; i++){
        for(int j = i+1; j < arr.size() ; j++){
            int minIdx = i;
            if(arr[j] < arr[minIdx]){
                minIdx = j; 
            }

            int temp = arr[minIdx];
            arr[minIdx] = arr[i];
            arr[i] = temp;
        }
    }
}
